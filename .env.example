# Django Settings
SECRET_KEY=your-secret-key-here-CHANGE-THIS-IN-PRODUCTION
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# Option 1: Individual settings (for MySQL/PostgreSQL)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=checador_db
DB_USER=postgres
DB_PASSWORD=your-password-here
DB_HOST=localhost
DB_PORT=5432

# Option 2: DATABASE_URL (alternative, overrides individual settings)
# DATABASE_URL=postgresql://user:password@host:port/dbname

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# Media and Static Files
MEDIA_ROOT=media/checador/
STATIC_ROOT=staticfiles

# CORS Settings (comma-separated URLs)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080,http://127.0.0.1:8080

# CSRF Trusted Origins (comma-separated URLs with protocol)
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key-here
DEFAULT_FROM_EMAIL=Sistema de Checador <notificaciones@example.com>

# DigitalOcean Spaces (optional, set USE_SPACES=True to enable)
USE_SPACES=False
DO_SPACES_ACCESS_KEY=your-spaces-access-key
DO_SPACES_SECRET_KEY=your-spaces-secret-key
DO_SPACES_BUCKET_NAME=your-bucket-name
DO_SPACES_ENDPOINT_URL=https://nyc3.digitaloceanspaces.com
DO_SPACES_REGION=nyc3
DO_SPACES_CDN_ENDPOINT=

# Platform-specific (auto-detected in production)
# DIGITALOCEAN_APP_DOMAIN=
# RENDER_EXTERNAL_HOSTNAME=
